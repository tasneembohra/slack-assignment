<resources>
    <style name="Avatar">
        <item name="android:paddingTop">@dimen/default_avatar_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/default_avatar_vertical_padding</item>
        <item name="android:paddingStart">@dimen/default_margin</item>
        <item name="android:paddingEnd">@dimen/default_margin</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="PersonAvatar">
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_width">28dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.Rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item> <!--TODO update font to Lato regular-->
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title"> <!--TODO update font to Lato bold-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

</resources>
